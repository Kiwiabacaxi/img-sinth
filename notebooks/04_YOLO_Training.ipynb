    "def evaluate_trained_model(model_path, test_dataset_path=None):\n",
    "    \"\"\"Avalia modelo treinado\"\"\"\n",
    "    \n",
    "    if not model_path or not Path(model_path).exists():\n",
    "        print(\"‚ùå Modelo n√£o encontrado\")\n",
    "        return\n",
    "    \n",
    "    print(f\"üìä Avaliando modelo: {model_path}\")\n",
    "    \n",
    "    try:\n",
    "        # Carregar modelo\n",
    "        model = YOLO(model_path)\n",
    "        \n",
    "        # Valida√ß√£o no dataset de treino\n",
    "        print(\"üîç Executando valida√ß√£o...\")\n",
    "        \n",
    "        if test_dataset_path and Path(test_dataset_path).exists():\n",
    "            val_results = model.val(data=test_dataset_path)\n",
    "        else:\n",
    "            # Usar dataset original se n√£o especificado\n",
    "            val_results = model.val()\n",
    "        \n",
    "        # Extrair m√©tricas\n",
    "        if hasattr(val_results, 'results_dict'):\n",
    "            metrics = val_results.results_dict\n",
    "            \n",
    "            print(f\"\\nüìà M√âTRICAS DE AVALIA√á√ÉO:\")\n",
    "            print(\"=\" * 40)\n",
    "            \n",
    "            # M√©tricas principais\n",
    "            map50 = metrics.get('metrics/mAP50(B)', 0)\n",
    "            map50_95 = metrics.get('metrics/mAP50-95(B)', 0) \n",
    "            precision = metrics.get('metrics/precision(B)', 0)\n",
    "            recall = metrics.get('metrics/recall(B)', 0)\n",
    "            \n",
    "            print(f\"mAP@0.5: {map50:.3f}\")\n",
    "            print(f\"mAP@0.5:0.95: {map50_95:.3f}\")\n",
    "            print(f\"Precision: {precision:.3f}\")\n",
    "            print(f\"Recall: {recall:.3f}\")\n",
    "            \n",
    "            # F1-Score\n",
    "            if precision > 0 and recall > 0:\n",
    "                f1 = 2 * (precision * recall) / (precision + recall)\n",
    "                print(f\"F1-Score: {f1:.3f}\")\n",
    "            \n",
    "            # Compara√ß√£o com benchmarks cient√≠ficos\n",
    "            print(f\"\\nüéØ COMPARA√á√ÉO COM BENCHMARKS:\")\n",
    "            print(\"=\" * 40)\n",
    "            \n",
    "            benchmarks = {\n",
    "                'Moreno et al. (2023) - Sint√©tico': 0.91,\n",
    "                'Moreno et al. (2023) - Misto': 0.99,\n",
    "                'Target do Projeto': 0.85\n",
    "            }\n",
    "            \n",
    "            for benchmark_name, benchmark_value in benchmarks.items():\n",
    "                performance_ratio = map50 / benchmark_value if benchmark_value > 0 else 0\n",
    "                status = \"‚úÖ\" if performance_ratio >= 0.85 else \"‚ö†Ô∏è\" if performance_ratio >= 0.7 else \"‚ùå\"\n",
    "                print(f\"{status} {benchmark_name}: {benchmark_value:.3f} (Nosso: {performance_ratio*100:.1f}%)\")\n",
    "            \n",
    "            # Avalia√ß√£o geral\n",
    "            if map50 >= 0.85:\n",
    "                print(\"\\nüèÜ EXCELENTE! Modelo atende aos benchmarks cient√≠ficos\")\n",
    "            elif map50 >= 0.7:\n",
    "                print(\"\\nüëç BOM! Performance satisfat√≥ria, pode ser melhorada\")\n",
    "            elif map50 >= 0.5:\n",
    "                print(\"\\n‚ö†Ô∏è MODERADO. Considere mais dados ou ajuste de hiperpar√¢metros\")\n",
    "            else:\n",
    "                print(\"\\n‚ùå BAIXO. Revise dataset e configura√ß√µes de treinamento\")\n",
    "            \n",
    "        else:\n",
    "            print(\"‚ö†Ô∏è M√©tricas detalhadas n√£o dispon√≠veis\")\n",
    "            \n",
    "        return val_results\n",
    "        \n",
    "    except Exception as e:\n",
    "        print(f\"‚ùå Erro na avalia√ß√£o: {e}\")\n",
    "        return None\n",
    "\n",
    "# Interface de avalia√ß√£o\n",
    "evaluate_btn = widgets.Button(\n",
    "    description='üìä Avaliar Modelo',\n",
    "    button_style='info'\n",
    ")\n",
    "\n",
    "evaluation_output = widgets.Output()\n",
    "\n",
    "def evaluate_callback(btn):\n",
    "    with evaluation_output:\n",
    "        clear_output()\n",
    "        if trained_model_path:\n",
    "            evaluate_trained_model(trained_model_path)\n",
    "        else:\n",
    "            print(\"‚ùå Treine um modelo primeiro!\")\n",
    "\n",
    "evaluate_btn.on_click(evaluate_callback)\n",
    "\n",
    "display(widgets.VBox([\n",
    "    widgets.HTML(\"<h3>üìä Avalia√ß√£o</h3>\"),\n",
    "    evaluate_btn,\n",
    "    evaluation_output\n",
    "]))"
   ]
