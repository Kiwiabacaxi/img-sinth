    "def test_model_inference(model_path, test_images_dir=None, num_samples=6):\n",
    "    \"\"\"Testa infer√™ncia do modelo em imagens de exemplo\"\"\"\n",
    "    \n",
    "    if not model_path or not Path(model_path).exists():\n",
    "        print(\"‚ùå Modelo n√£o encontrado\")\n",
    "        return\n",
    "    \n",
    "    # Usar imagens do dataset de teste se dispon√≠vel\n",
    "    if not test_images_dir:\n",
    "        test_images_dir = \"/content/yolo_dataset/images/test\"\n",
    "    \n",
    "    test_dir = Path(test_images_dir)\n",
    "    if not test_dir.exists():\n",
    "        print(f\"‚ùå Diret√≥rio de teste n√£o encontrado: {test_dir}\")\n",
    "        return\n",
    "    \n",
    "    # Listar imagens dispon√≠veis\n",
    "    image_files = list(test_dir.glob(\"*.jpg\")) + list(test_dir.glob(\"*.png\"))\n",
    "    \n",
    "    if not image_files:\n",
    "        print(\"‚ùå Nenhuma imagem de teste encontrada\")\n",
    "        return\n",
    "    \n",
    "    # Amostra aleat√≥ria\n",
    "    import random\n",
    "    test_samples = random.sample(image_files, min(num_samples, len(image_files)))\n",
    "    \n",
    "    print(f\"üîç Testando infer√™ncia em {len(test_samples)} imagens...\")\n",
    "    \n",
    "    try:\n",
    "        # Carregar modelo\n",
    "        model = YOLO(model_path)\n",
    "        \n",
    "        # Executar infer√™ncia\n",
    "        results = model(test_samples, save=False, verbose=False)\n",
    "        \n",
    "        # Visualizar resultados\n",
    "        cols = 3\n",
    "        rows = (len(test_samples) + cols - 1) // cols\n",
    "        \n",
    "        fig, axes = plt.subplots(rows, cols, figsize=(15, 5*rows))\n",
    "        if rows == 1:\n",
    "            axes = axes.reshape(1, -1)\n",
    "        elif len(test_samples) == 1:\n",
    "            axes = np.array([axes])\n",
    "        \n",
    "        for i, (img_path, result) in enumerate(zip(test_samples, results)):\n",
    "            row, col = divmod(i, cols)\n",
    "            \n",
    "            # Carregar imagem original\n",
    "            from PIL import Image\n",
    "            img = Image.open(img_path)\n",
    "            \n",
    "            # Plotar imagem com detec√ß√µes\n",
    "            if len(axes.shape) == 1:\n",
    "                ax = axes[i]\n",
    "            else:\n",
    "                ax = axes[row, col]\n",
    "            \n",
    "            # Renderizar resultado\n",
    "            result_img = result.plot()  # YOLO renderiza automaticamente\n",
    "            ax.imshow(result_img)\n",
    "            \n",
    "            # T√≠tulo com estat√≠sticas\n",
    "            num_detections = len(result.boxes) if result.boxes is not None else 0\n",
    "            max_conf = max(result.boxes.conf.tolist()) if result.boxes is not None and len(result.boxes.conf) > 0 else 0\n",
    "            \n",
    "            ax.set_title(f\"{img_path.name}\\nDetec√ß√µes: {num_detections}, Max Conf: {max_conf:.2f}\")\n",
    "            ax.axis('off')\n",
    "        \n",
    "        # Remover subplots vazios\n",
    "        for i in range(len(test_samples), rows * cols):\n",
    "            row, col = divmod(i, cols)\n",
    "            if len(axes.shape) > 1:\n",
    "                axes[row, col].axis('off')\n",
    "        \n",
    "        plt.tight_layout()\n",
    "        plt.show()\n",
    "        \n",
    "        # Estat√≠sticas gerais\n",
    "        total_detections = sum(len(r.boxes) if r.boxes is not None else 0 for r in results)\n",
    "        avg_confidence = np.mean([conf for r in results if r.boxes is not None for conf in r.boxes.conf.tolist()])\n",
    "        \n",
    "        print(f\"\\nüìä ESTAT√çSTICAS DA INFER√äNCIA:\")\n",
    "        print(f\"   Total de detec√ß√µes: {total_detections}\")\n",
    "        print(f\"   M√©dia de detec√ß√µes por imagem: {total_detections/len(test_samples):.1f}\")\n",
    "        print(f\"   Confian√ßa m√©dia: {avg_confidence:.3f}\")\n",
    "        \n",
    "    except Exception as e:\n",
    "        print(f\"‚ùå Erro na infer√™ncia: {e}\")\n",
    "\n",
    "# Interface de teste\n",
    "test_images_widget = widgets.Text(\n",
    "    value='/content/yolo_dataset/images/test',\n",
    "    description='Dir Teste:'\n",
    ")\n",
    "\n",
    "num_samples_widget = widgets.IntSlider(\n",
    "    value=6,\n",
    "    min=3,\n",
    "    max=12,\n",
    "    description='Amostras:'\n",
    ")\n",
    "\n",
    "test_btn = widgets.Button(\n",
    "    description='üîç Testar Infer√™ncia',\n",
    "    button_style='warning'\n",
    ")\n",
    "\n",
    "test_output = widgets.Output()\n",
    "\n",
    "def test_callback(btn):\n",
    "    with test_output:\n",
    "        clear_output()\n",
    "        if trained_model_path:\n",
    "            test_model_inference(\n",
    "                trained_model_path,\n",
    "                test_images_widget.value,\n",
    "                num_samples_widget.value\n",
    "            )\n",
    "        else:\n",
    "            print(\"‚ùå Treine um modelo primeiro!\")\n",
    "\n",
    "test_btn.on_click(test_callback)\n",
    "\n",
    "display(widgets.VBox([\n",
    "    widgets.HTML(\"<h3>üîç Teste de Infer√™ncia</h3>\"),\n",
    "    test_images_widget,\n",
    "    num_samples_widget,\n",
    "    test_btn,\n",
    "    test_output\n",
    "]))"
   ]
