    "def train_yolo_model(model_name, task_type, dataset_path, epochs, batch_size, img_size):\n",
    "    \"\"\"Treina modelo YOLO com configura√ß√µes especificadas\"\"\"\n",
    "    \n",
    "    print(f\"üöÄ Iniciando treinamento YOLO...\")\n",
    "    print(f\"Modelo: {model_name}\")\n",
    "    print(f\"Tarefa: {task_type}\")\n",
    "    print(f\"Dataset: {dataset_path}\")\n",
    "    print(f\"√âpocas: {epochs}\")\n",
    "    print(f\"Batch Size: {batch_size}\")\n",
    "    print(f\"Image Size: {img_size}\")\n",
    "    \n",
    "    # Verificar se dataset existe\n",
    "    if not Path(dataset_path).exists():\n",
    "        print(f\"‚ùå Dataset n√£o encontrado: {dataset_path}\")\n",
    "        return None\n",
    "    \n",
    "    try:\n",
    "        # Determinar modelo base\n",
    "        if task_type == 'segment':\n",
    "            model_file = f\"{model_name}-seg.pt\"\n",
    "        else:\n",
    "            model_file = f\"{model_name}.pt\"\n",
    "        \n",
    "        # Carregar modelo\n",
    "        print(f\"üì• Carregando modelo {model_file}...\")\n",
    "        model = YOLO(model_file)\n",
    "        \n",
    "        # Configurar treinamento\n",
    "        train_args = {\n",
    "            'data': dataset_path,\n",
    "            'epochs': epochs,\n",
    "            'batch': batch_size,\n",
    "            'imgsz': img_size,\n",
    "            'patience': 20,\n",
    "            'save_period': 10,\n",
    "            'device': '0' if torch.cuda.is_available() else 'cpu',\n",
    "            'workers': 4,\n",
    "            'project': '/content/yolo_training',\n",
    "            'name': f'{model_name}_{task_type}_pastures',\n",
    "            'exist_ok': True,\n",
    "            'pretrained': True,\n",
    "            'optimizer': 'SGD',\n",
    "            'lr0': 0.01,\n",
    "            'momentum': 0.937,\n",
    "            'weight_decay': 0.0005,\n",
    "            'warmup_epochs': 3,\n",
    "            'box': 7.5,  # box loss gain\n",
    "            'cls': 0.5,  # cls loss gain\n",
    "            'dfl': 1.5,  # dfl loss gain\n",
    "            'augment': True,\n",
    "            'mosaic': 1.0,\n",
    "            'mixup': 0.1,\n",
    "            'copy_paste': 0.1,\n",
    "            'val': True,\n",
    "            'plots': True,\n",
    "            'verbose': True\n",
    "        }\n",
    "        \n",
    "        print(\"\\nüéØ Iniciando treinamento...\")\n",
    "        print(\"‚è≥ Isso pode demorar v√°rias horas dependendo do dataset e hardware\")\n",
    "        \n",
    "        # Executar treinamento\n",
    "        start_time = time.time()\n",
    "        results = model.train(**train_args)\n",
    "        training_time = time.time() - start_time\n",
    "        \n",
    "        print(f\"\\n‚úÖ Treinamento conclu√≠do em {training_time/3600:.1f} horas!\")\n",
    "        \n",
    "        # Resultados do treinamento\n",
    "        if hasattr(results, 'results_dict'):\n",
    "            metrics = results.results_dict\n",
    "            print(f\"\\nüìä RESULTADOS FINAIS:\")\n",
    "            print(f\"   mAP50: {metrics.get('metrics/mAP50(B)', 0):.3f}\")\n",
    "            print(f\"   mAP50-95: {metrics.get('metrics/mAP50-95(B)', 0):.3f}\")\n",
    "            print(f\"   Precision: {metrics.get('metrics/precision(B)', 0):.3f}\")\n",
    "            print(f\"   Recall: {metrics.get('metrics/recall(B)', 0):.3f}\")\n",
    "        \n",
    "        # Caminho do modelo treinado\n",
    "        model_path = Path('/content/yolo_training') / f'{model_name}_{task_type}_pastures' / 'weights' / 'best.pt'\n",
    "        \n",
    "        if model_path.exists():\n",
    "            print(f\"\\nüíæ Modelo salvo em: {model_path}\")\n",
    "            return str(model_path)\n",
    "        else:\n",
    "            print(\"‚ö†Ô∏è Modelo n√£o encontrado no local esperado\")\n",
    "            return None\n",
    "            \n",
    "    except Exception as e:\n",
    "        print(f\"‚ùå Erro no treinamento: {e}\")\n",
    "        return None\n",
    "\n",
    "# Interface de treinamento\n",
    "train_btn = widgets.Button(\n",
    "    description='üöÄ Iniciar Treinamento',\n",
    "    button_style='success',\n",
    "    layout=widgets.Layout(width='200px')\n",
    ")\n",
    "\n",
    "training_output = widgets.Output()\n",
    "trained_model_path = None\n",
    "\n",
    "def train_callback(btn):\n",
    "    global trained_model_path\n",
    "    \n",
    "    train_btn.disabled = True\n",
    "    train_btn.description = '‚è≥ Treinando...'\n",
    "    \n",
    "    with training_output:\n",
    "        clear_output()\n",
    "        \n",
    "        trained_model_path = train_yolo_model(\n",
    "            model_name=model_type_widget.value,\n",
    "            task_type=task_type_widget.value,\n",
    "            dataset_path=dataset_path_widget.value,\n",
    "            epochs=epochs_widget.value,\n",
    "            batch_size=batch_size_widget.value,\n",
    "            img_size=img_size_widget.value\n",
    "        )\n",
    "    \n",
    "    train_btn.disabled = False\n",
    "    train_btn.description = 'üöÄ Iniciar Treinamento'\n",
    "\n",
    "train_btn.on_click(train_callback)\n",
    "\n",
    "display(widgets.VBox([\n",
    "    widgets.HTML(\"<h3>üöÄ Treinamento</h3>\"),\n",
    "    train_btn,\n",
    "    training_output\n",
    "]))"
   ]
